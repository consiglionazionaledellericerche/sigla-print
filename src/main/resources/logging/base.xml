<?xml version="1.0" encoding="UTF-8"?>

<included>
    <!-- spring boot logback configuration files -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml" />
    <include resource="org/springframework/boot/logging/logback/file-appender.xml" />
    <include resource="logging/appender/gelf.xml" />
    <include resource="logging/appender/syslog.xml" />

    <!-- logger CNR -->
    <logger name="it.cnr" level="INFO"/>

    <root level="WARN">
        <appender-ref ref="ASYNC_GELF_APPENDER" />
        <appender-ref ref="ASYNC_SYSLOG_APPENDER" />
        <appender-ref ref="FILE" />
    </root>

</included>